<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ash.studios.musify">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".Utils.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/LightTheme"
        tools:ignore="AllowBackup,UnusedAttribute">
        <activity
            android:name=".Activities.Welcome"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Activities.SearchList.CategorySearch"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysVisible|adjustPan" />
        <activity
            android:name=".Activities.SearchList.BunchSearch"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysVisible|adjustPan" />
        <activity
            android:name=".Activities.Categories.AllSongList"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.Categories.ArtistList"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.Categories.AlbumList"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.Categories.GenreList"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.Categories.BunchList"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.Categories.PlayList"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.Categories.TRList"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.Categories.LRList"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.Player"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.Library"
            android:screenOrientation="portrait" />

        <service android:name=".Utils.MusicService" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>